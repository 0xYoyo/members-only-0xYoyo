extends layout

block content
    h1=title

    form(method='POST' action='')
      div
        label(for='secretpass') Enter the secret password to join:
        input#secretpass(type='password' name='secretpass' required='true' )
      button(type='submit') Join
    
    p Don't know it?
        a(href="/sign-up") Return home  

    if errors
      ul
        for error in errors
          li!= error.msg
