extends layout

block content
    h1=title

    form(method='POST' action='')
      div
        label(for='username') Username:
        input#username(type='text' name='username' required='true' value=(undefined===user ? '' : user.username) )
      div
        label(for='password') Password:
        input#password(type='password' name='password' required='true' )
      button(type='submit') Log in
    
    p Don't have a user?
        a(href="/sign-up") Sign up  

    if errors
      ul
        for error in errors
          li!= error.msg
