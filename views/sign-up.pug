extends layout

block content
    h1=title

    form(method='POST' action='')
      div
        label(for='first_name') First Name:
        input#first_name(type='text' placeholder='John' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
        label(for='family_name') Last Name:
        input#family_name(type='text' placeholder='Smith' name='last_name' required='true' value=(undefined===user ? '' : user.last_name))
      div
        label(for='username') Username:
        input#username(type='text' name='username' required='true' value=(undefined===user ? '' : user.username) )
      div
        label(for='password') Password:
        input#password(type='password' name='password' required='true' )
      div
        label(for='passwordConfirm') Confirm password:
        input#passwordConfirm(type='password' name='passwordConfirm' required='true' )      
      button(type='submit') Sign up
    
    p Already have a user?
        a(href="/log-in") Log in  

    if errors
      ul
        for error in errors
          li!= error.msg
